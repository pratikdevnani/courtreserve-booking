// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Account used for booking courts
model Account {
  id           String        @id @default(cuid())
  name         String        // Friendly name
  email        String        @unique
  password     String        // Plain text (since this is single-user local app)
  venue        String        // "sunnyvale" or "santa_clara"
  isResident   Boolean       @default(true) // Sunnyvale resident (affects booking window)
  cookieJar    String?       // Path to cookie jar file
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  reservations Reservation[]
  bookingJobs  BookingJob[]
}

// Reservation made by the software
model Reservation {
  id              String   @id @default(cuid())
  accountId       String
  account         Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  venue           String   // "sunnyvale" or "santa_clara"
  courtId         String?  // Court ID from CourtReserve
  date            String   // YYYY-MM-DD
  startTime       String   // HH:MM
  duration        Int      // minutes

  // Metadata for tracking
  bookedAt           DateTime @default(now())
  externalId         String?  // Reservation ID from CourtReserve (if available)
  confirmationNumber String?  // Confirmation number from CourtReserve (e.g., "CZCG67413233939")
  bookingJobId       String?  // Link to the job that created this
  bookingJob         BookingJob? @relation(fields: [bookingJobId], references: [id], onDelete: SetNull)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([accountId])
  @@index([date])
  @@index([bookingJobId])
}

// Booking job configuration
model BookingJob {
  id              String   @id @default(cuid())
  name            String   // User-friendly name
  accountId       String   // Which account to use
  account         Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  venue           String   // "sunnyvale" or "santa_clara"

  // Job type
  recurrence      String   // "once" or "weekly"
  slotMode        String?  // "single" or "multi" (DEPRECATED - for migration)

  // Days configuration (JSON array)
  // For single day: ["Monday"] or ["2025-01-15"]
  // For multi day: ["Monday", "Wednesday", "Friday"] or ["2025-01-15", "2025-01-17"]
  days            String   // JSON stringified array

  // OLD TIME PREFERENCES (DEPRECATED - for migration)
  timeSlots       String?  // JSON stringified array ["18:00", "18:30", "19:00"]
  durations       String?  // JSON stringified array [120, 90, 60, 30]

  // NEW TIME PREFERENCES
  preferredTime     String?  // "18:00" - preferred start time
  timeFlexibility   Int      @default(30)  // 0, 30, 60, or 90 minutes

  // NEW DURATION PREFERENCES
  preferredDuration Int      @default(120)  // ideal duration in minutes
  minDuration       Int      @default(60)   // minimum acceptable duration
  strictDuration    Boolean  @default(false) // if true, only book preferredDuration

  // NEW BEHAVIOR CONTROLS
  maxBookingsPerDay Int      @default(1)    // user configurable
  priority          Int      @default(0)    // higher = processed first at noon
  minNoticeHours    Int      @default(6)    // minimum hours notice for polling mode

  // Status
  active          Boolean  @default(true)
  archived        Boolean  @default(false)  // for completed one-time jobs
  lastRun         DateTime?
  nextRun         DateTime?
  lastAttemptAt   DateTime?  // When job last tried to find slots

  // Latest attempt result details
  lastAttemptStatus   String?  // "success" | "no_courts" | "error" | "window_closed" | "locked"
  lastAttemptMessage  String?  // Human-readable message
  lastAttemptDate     String?  // Target date attempted (YYYY-MM-DD)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  reservations    Reservation[]
  runHistory      BookingRunHistory[]

  @@index([accountId])
  @@index([active])
  @@index([archived])
  @@index([nextRun])
  @@index([priority])
}

// Booking run history - tracks each execution attempt
model BookingRunHistory {
  id              String   @id @default(cuid())
  bookingJobId    String
  bookingJob      BookingJob @relation(fields: [bookingJobId], references: [id], onDelete: Cascade)

  runMode         String?  // "noon" | "polling" | "manual"
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  durationMs      Int?     // execution time in milliseconds
  status          String   // "success", "partial", "failed", "no_courts", "locked", "error", "window_closed"

  // Detailed results per target date
  attempts        String   // JSON: [{ date, timeSlot, success, message, courtId?, duration? }]

  successCount    Int      @default(0)
  failureCount    Int      @default(0)

  errorMessage    String?  // If the entire run failed

  createdAt       DateTime @default(now())

  @@index([bookingJobId])
  @@index([startedAt])
  @@index([runMode])
}
